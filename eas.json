{
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "env": {
                "ENVIRONMENT": "development"
            }
        },
        "preview": {
            "developmentClient": false,
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "env": {
                "ENVIRONMENT": "preview"
            }
        },
        "production": {
            "developmentClient": false,
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "simulator": true
            },
            "env": {
                "ENVIRONMENT": "production"
            }
        }
    },
    "cli": {
        "version": ">= 3.0.0"
    }
}
